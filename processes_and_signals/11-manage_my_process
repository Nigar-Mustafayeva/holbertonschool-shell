#!/usr/bin/env bash
# File: 11-manage_my_process
# Init-style script to manage manage_my_process

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="$(pwd)/manage_my_process"

start_process() {
    # Start manage_my_process in background and save its PID
    "$SCRIPT_PATH" &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop_process() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        # Stop the process
        kill "$PID" 2>/dev/null
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running"
    fi
}

restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

# Main argument handling
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
